@{
  Layout = "_Layout";
}

@using RecipeBox.Models

@if(Model.Count == 0)
{
  <p>No tags added yet.</p>
}
else
{
  <h2>Here are your tags:</h2>
  <ul>
    @foreach (Tag tag in Model)
    {
      <li>@Html.ActionLink($"{tag.Diet}", "Details", new { id = tag.TagId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new tag", "Create")</p>